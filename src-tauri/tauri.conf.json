{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm next-build",
    "beforeDevCommand": "pnpm next-start",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Copy Pasta",
    "version": "0.1.3"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "window": {
        "hide": true,
        "setFocus": true,
        "show": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Copyright (c) 2026 Raymond Kinne III",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.faitltd.copypasta",
      "longDescription": "Copy Pasta saves your clipboard history so you can quickly find and reuse previous copies.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Clipboard manager",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "http://timestamp.digicert.com",
        "tsp": true
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' ipc:;"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Faitltd/copy-paste/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJCNTdEMjk3QzY4QTk3RjIKUldUeWw0ckdsOUpYdTFBOFlCazQweWt3RFVOcnpEQnNUZUJzV21waVU1cVBiZHVjR040dkVVa0IK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Copy Pasta",
        "width": 380,
        "height": 600,
        "decorations": false,
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    }
  }
}
